/* 按钮容器改为横向 Flex */
.button-group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: #ffffff;
  border-top: 1rpx solid #eee;
  gap: 20rpx;
}

/* 按钮样式升级：药丸型、微阴影 */
.btn-morning, .btn-evening {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.btn-morning {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 158, 0.3);
}

.btn-evening {
  background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(161, 196, 253, 0.3);
}

/* 禁用状态 */
button[disabled] {
  background: #f5f5f5 !important;
  color: #ccc !important;
  box-shadow: none !important;
}

/* 报告卡片排版优化 */
.report-card {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 30rpx rgba(0,0,0,0.03);
  height: calc(100vh - 350rpx); /* 留出按钮和头部的空间 */
}

.report-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  letter-spacing: 1rpx;
}