<view class="container">
  <view class="header">
    <text class="title">🤖 财经早晚报</text>
    <text class="subtitle">AI 深度解析 · 每日价值精选</text>
  </view>

  <scroll-view 
    scroll-y 
    class="report-card" 
    scroll-top="{{scrollTop}}"
    scroll-with-animation="{{!isTouching}}"
    bindscroll="onScroll"
    bindtouchstart="handleTouchStart"
    bindtouchend="handleTouchEnd"
    bindtouchcancel="handleTouchEnd"
  >
    <view class="content-box">
      <text user-select class="report-text">{{reportText || (loading ? 'AI 正在分析今日局势...' : '请选择今日报时')}}</text>
    </view>
  </scroll-view>

  <view class="button-group">
    <button class="btn morning" bindtap="fetchReportStream" data-type="早报" disabled="{{loading}}">
      ☀️ 今日早报
    </button>
    <button class="btn evening" bindtap="fetchReportStream" data-type="晚报" disabled="{{loading}}">
      🌙 今日晚报
    </button>
  </view>
</view>